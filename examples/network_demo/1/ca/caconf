[ ca ]
default_ca = copernicus_ca

[ copernicus_ca ]
dir = ca
certificate = $dir/copernicus_ca_cert.pem
database = $dir/index.txt
new_certs_dir = $dir/certs
private_key = $dir/keys/copernicus_priv.pem
serial = $dir/serial

default_crl_days = 7
default_days = 365
default_md = md5

policy = copernicus_policy
x509_extensions = certificate_extensions

[ copernicus_policy ]
commonName    = supplied
stateOrProvinceName = supplied
countryName = supplied
emailAddress = supplied
organizationName = supplied
organizationalUnitName = optional

[ certificate_extensions ]
basicConstraints = CA:false


[ req ]
default_bits = 2048
default_keyfile = ca/keys/copernicus_priv.pem
default_md = md5

prompt = no
distinguished_name = copernicus_root_ca
x509_extensions  = copernicus_root_ca_extensions

[ copernicus_root_ca ]
commonName = tcbm03.theophys.kth.se
stateOrProvinceName = test
countryName = SE
emailAddress = test@test.com
organizationName = copernicus

[ copernicus_root_ca_extensions ]
basicConstraints = CA:true
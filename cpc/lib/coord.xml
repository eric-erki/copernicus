<?xml version="1.0"?>
<cpc>
    <type id="coord_2d" base="record">
        <desc>A 2-dimensional coordinate.</desc>
        <field id="x" type="float"/>
        <field id="y" type="float"/>
    </type>
    <type id="coord_2d_array" base="array" member-type="coord_2d" />

    <type id="coord_3d" base="record">
        <desc>A 3-dimensional coordinate.</desc>
        <field id="x" type="float"/>
        <field id="y" type="float"/>
        <field id="z" type="float"/>
    </type>
    <type id="coord_3d_array" base="array" member-type="coord_3d" />

    <type id="coord_4d" base="record">
        <desc>A 4-dimensional coordinate.</desc>
        <field id="x" type="float"/>
        <field id="y" type="float"/>
        <field id="z" type="float"/>
        <field id="t" type="float"/>
    </type>
    <type id="coord_4d_array" base="array" member-type="coord_4d" />
</cpc>
